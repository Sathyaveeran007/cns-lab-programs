import numpy as np

def hill_encrypt(text, key):
    text = text.replace(" ", "").lower()
    text = ''.join([c for c in text if c.isalpha()])
    while len(text) % 2 != 0:
        text += 'x'
    text_pairs = [(ord(text[i]) - 97, ord(text[i+1]) - 97) for i in range(0, len(text), 2)]
    cipher = ""
    for pair in text_pairs:
        vec = np.array([[pair[0]], [pair[1]]])
        res = np.dot(key, vec) % 26
        cipher += chr(res[0][0] + 97) + chr(res[1][0] + 97)
    return cipher

key = np.array([[9, 4], [5, 7]])
print(hill_encrypt("meet", key))
